{{! Item nav }}
<nav class="sheet-tabs tabs" aria-role="{{localize 'SHEETS.FormNavLabel'}}">
    {{#each (ifThen tabs tabs tabGroups.sheet) as |tab|}}
        <a class="{{tab.cssClass}}" data-action="tab" data-group="{{tab.group}}" data-tab="{{tab.id}}">
            <i class="{{tab.icon}}"></i>
            <label>
                {{localize tab.label}}
                {{#if tab.isIncomplete}}<i class="incomplete fa-solid fa-triangle-exclamation"></i>{{/if}}
            </label>
        </a>
    {{/each}}
</nav>
