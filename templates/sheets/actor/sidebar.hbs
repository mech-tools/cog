<section class="sheet-sidebar flexcol">
    {{! Profile Image }}
    <img class="profile framed-section" src="{{actor.img}}" alt="{{actor.name}}" width="200" height="200" {{#if
        editMode}} data-action="editImage" data-edit="img" {{/if}} />

    {{! Health Pool }}
    <div class="health flexrow">
        <img src="{{health.fgPath}}" class="foreground {{actor.type}}" />

        {{! Hit Die }}
        {{#if actor.hasHitDie}}
            <div class="hit-die flexrow">
                {{#if editMode}}
                    <i class="fas fa-cog icon-button" data-action="configure" data-configure-profile="hitDie"
                        data-tooltip="COG.SHEET.ACTOR.LABELS.Configure_hit_die" data-tooltip-class="cog"
                        data-tooltip-direction="UP"></i>
                {{else}}
                    <div class="dice-icon" style="mask-image: url({{hitDieType.icon}})"
                        data-tooltip="{{hitDieType._mt.label}}" data-tooltip-class="cog" data-tooltip-direction="UP">
                    </div>
                {{/if}}
            </div>
        {{/if}}

        {{! Hit Points }}
        <div class="hit-points flexrow" style="{{health.hitPoints.cssPct}} {{health.tempDmgs.cssPct}}">
            <div class="label flexrow" data-tooltip="{{health.hitPoints._mt.label}}" data-tooltip-class="cog">
                <span class="value flex0">{{health.hitPoints.value}}</span>
                <span class="separator flex0">/</span>
                <span class="max flex0">{{health.hitPoints.max}}</span>
            </div>
            <div class="field flexrow hidden">
                {{formInput
                    health.hitPoints._mt.value.field
                    value=health.hitPoints.value
                }}
            </div>
            {{#if editMode}}
                <i class="fas fa-cog icon-button" data-action="configure" data-configure-profile="hitPoints"
                    data-tooltip="COG.SHEET.ACTOR.LABELS.Configure_hit_points" data-tooltip-class="cog"
                    data-tooltip-direction="UP"></i>
            {{/if}}
        </div>

        {{! Temp damages }}
        <div class="tmp-dmgs flexrow flex0">
            <span data-tooltip="{{health.tempDmgs._mt.label}}" data-tooltip-class="cog">
                {{formInput
                    health.tempDmgs._mt.value.field
                    value=health.tempDmgs.value
                    placeholder=health.tempDmgs._mt.value.abbreviation
                }}
            </span>
        </div>
    </div>

    {{! Favorite Actions }}
    <h2 class="divider">{{localize "COG.SHEET.ACTOR.LABELS.Favorite_actions"}}</h2>

</section>
