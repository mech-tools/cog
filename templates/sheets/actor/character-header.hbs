<section class="sheet-header flexcol">
    <header class="flexrow">

        {{! PC Name }}
        <h1 class="actor-name">
            {{#if editMode}}
                {{formInput
                    fields.name
                    value=actor.name
                }}
            {{else}}
                {{actor.name}}
            {{/if}}
        </h1>

        {{! Incomplete Level }}
        {{#if creationSteps.incomplete}}
            <span class="incomplete standard-button flex0" data-tooltip="{{creationSteps.details}}"
                data-tooltip-class="cog creation-steps">
                <i class="fa-solid fa-triangle-exclamation"></i>
            </span>
        {{/if}}

        {{! PC Level }}
        <div class="level flexrow flex0">
            <span class="label">{{ADVANCEMENT.level.value.label}}</span>
            {{#if editMode}}
                {{formInput
                    ADVANCEMENT.level.value.field
                    value=ADVANCEMENT.level.value.value
                    type="number"
                }}
            {{else}}
                <span class="value">{{ADVANCEMENT.level.value.value}}</span>
            {{/if}}
        </div>
    </header>

    {{! PC Traits }}
    <div class="subtitle flexrow">
        <a class="standard-button highlighted"><i class="fa-solid fa-octagon-plus"></i></i></i> Esp√®ce</a>
        <a class="standard-button"><i class="fa-solid fa-id-card-clip"></i> Profil</a>
        <a class="standard-button"><i class="fa-regular fa-microchip"></i> Trait</a>
    </div>
</section>