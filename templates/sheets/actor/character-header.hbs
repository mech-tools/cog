<section class="sheet-header flexcol">
    <header class="flexrow">

        {{! PC Name }}
        <h1 class="actor-name">
            {{#if editMode}}
                {{formInput
                    fields.name
                    value=source.name
                }}
            {{else}}
                {{source.name}}
            {{/if}}
        </h1>

        {{! Incomplete Level }}
        <span class="incomplete cog-button flex0" data-tooltip="test" data-tooltip-class="cog">
            <i class="fa-solid fa-triangle-exclamation"></i>
        </span>

        {{! PC Level }}
        <div class="level flexrow flex0">
            <span class="label">{{advancement.level.label}}</span>
            {{#if editMode}}
                {{formInput
                    systemFields.advancement.fields.level.fields.value
                    value=advancement.level.value
                    type="number"
                }}
            {{else}}
                <span class="value">{{advancement.level.value}}</span>
            {{/if}}
        </div>
    </header>

    {{! PC Traits }}
    <div class="subtitle flexrow">
        <a class="cog-button highlighted"><i class="fa-solid fa-octagon-plus"></i></i></i> Esp√®ce</a>
        <a class="cog-button"><i class="fa-solid fa-id-card-clip"></i> Profil</a>
        <a class="cog-button"><i class="fa-regular fa-microchip"></i> Trait</a>
    </div>
</section>