<div class="sheet-content flexcol flex1 scrollable">
    {{#each HISTORY as |level|}}
        <div class="level flexrow">
            <div class="form-group">
                {{! Level Label }}
                <label>
                    {{level.value_label}}
                    {{#if level.isNull}}
                        <i class="incomplete fa-solid fa-triangle-exclamation"></i>
                    {{/if}}
                </label>

                {{! Level field }}
                <div class="form-fields">
                    {{#with (lookup @root.systemFields.history.fields @key) as |lvl|}}
                        {{formInput
                            lvl.fields.value
                            value=level.value
                            disabled=(ifThen level.rollable false true)
                        }}
                    {{/with}}
                    {{#if level.rollable}}
                        <i class="icon-button fa-regular fa-dice"></i>
                    {{/if}}
                </div>

                {{! PC Hint }}
                <p class="hint">{{level.value_hint}}</p>
            </div>
        </div>
    {{/each}}
</div>
